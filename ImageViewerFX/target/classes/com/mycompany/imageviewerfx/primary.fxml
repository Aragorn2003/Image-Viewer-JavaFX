<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="714.0" prefWidth="764.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.imageviewerfx.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <BorderPane prefHeight="709.0" prefWidth="724.0">
         <top>
            <Label prefHeight="18.0" prefWidth="165.0" text="Here you can display pictures" BorderPane.alignment="CENTER" />
         </top>
         <left>
            <Button fx:id="openPicture" mnemonicParsing="false" prefHeight="62.0" prefWidth="90.0" text="Open Picture" BorderPane.alignment="CENTER" />
         </left>
         <center>
            <ImageView fx:id="imageView" fitHeight="418.0" fitWidth="405.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <TextField fx:id="textField" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </children>
</VBox>
